<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
  <Resource 
        name="jdbc/absdb"   
        url="jdbc:mysql://localhost:3306/absdb"
        username="root"
        password="password" 
        driverClassName="com.mysql.jdbc.Driver" 
        maxActive="100" 
        maxIdle="30" 
        maxWait="10000"
        logAbandoned="true" 
        removeAbandoned="true" 
        removeAbandonedTimeout="60" 
        auth="Container" 
        type="javax.sql.DataSource" 
    />
</Context>
